<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activitys.ProxyAvtivity">

    <com.zhengsr.viewpagerlib.indicator.TabIndicator
        android:id="@+id/line_indicator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/white"
        app:visiabel_size="3"
        app:tab_width="24dp"
        app:tab_height="8dp"
        app:tap_type="tri"
        app:tab_color="@color/app_main_thme_color"
        app:tab_show="true"
        app:tab_text_default_color="@color/Color_666666"
        app:tab_text_change_color="@color/app_main_thme_color"
        app:tab_text_type="colortext"
        app:tab_textsize="16sp"/>

    <View style="@style/Line_Horizontal_06dip.color_DDDDDD"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_eye_hot"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>
