<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:orientation="horizontal">
        <android.support.design.widget.TabLayout
            android:id="@+id/new_home_tablayout"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="1"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dip"
            app:tabIndicatorColor="@color/color_new_main"
            app:tabTextColor="@color/app_main_text_color"
            app:tabSelectedTextColor="@color/color_new_main"
            app:tabTextAppearance="@style/TextAppearance.Design.Tab"
            />

        <View style="@style/Line_Vertical_06dip.color_DDDDDD"/>

        <ImageView
            android:id="@+id/iv_change_channel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            app:srcCompat="@drawable/ic_add_gray_24dp"/>
    </LinearLayout>

    <View style="@style/Line_Horizontal_06dip.color_DDDDDD"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_new_home_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>