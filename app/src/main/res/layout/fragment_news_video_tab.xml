<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/new_video_tablayout"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dip"
        app:tabIndicatorColor="@color/color_new_main"
        app:tabTextColor="@color/app_main_text_color"
        app:tabSelectedTextColor="@color/color_new_main"
        app:tabTextAppearance="@style/TextAppearance.Design.Tab"
        />

    <View
        android:id="@+id/view_line"
        style="@style/Line_Horizontal_06dip.color_DDDDDD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_video_tablayout"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_new_video_tab"
        android:layout_width="360dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line"/>

</android.support.constraint.ConstraintLayout>