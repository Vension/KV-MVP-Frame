<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_news_detail"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="22dip"
        android:background="@color/Color_aaaaaa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back_left_default_24dp"
            android:paddingLeft="10dp"
            android:scaleType="center"/>

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <com.sunfusheng.glideimageview.GlideImageView
                android:id="@+id/iv_avatar"
                android:layout_width="26dip"
                android:layout_height="26dip"
                app:siv_border_color="@color/white"
                app:siv_border_width="1dip"
                app:siv_shape_type="circle"/>

            <TextView
                android:id="@+id/tv_author"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_222222"
                android:textSize="14sp"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="4.0dip"
            android:paddingRight="8.0dip"
            android:scaleType="center"
            android:src="@mipmap/new_more_titlebar"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d8d8d8"/>
    </RelativeLayout>
</LinearLayout>