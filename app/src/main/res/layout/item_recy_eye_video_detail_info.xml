<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44000000"
        android:orientation="vertical"
        style="@style/padding_left_15dip_top_10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_videoinfo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/app_main_backgroup_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="这家解忧杂货铺，用音乐治愈你！" />

                <TextView
                    android:id="@+id/tv_videoinfo_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:singleLine="true"
                    android:textColor="@color/Color_dddddd"
                    android:textSize="14sp"
                    tools:text="#广告/精选" />
            </LinearLayout>
            <ImageView
                android:id="@+id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/ic_action_down_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Color_dddddd"
            android:textSize="12sp"
            tools:text="亚当是个喜欢在学校惹是生非的青少年，但他的内心其实很混沌，因为家庭成员不能说的秘密，所以才导致他如此夸张，" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_favorite_border_white_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="123"
                />

            <TextView
                android:id="@+id/tv_action_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_share_white_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="123"
                />

            <TextView
                android:id="@+id/tv_action_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_message_white_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="123"
                />

            <TextView
                android:id="@+id/tv_action_offline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_file_download_white_24dp"
                android:gravity="center_vertical"
                android:text="@string/video_offline"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/Line_Horizontal_06dip.color_DDDDDD"/>


    <LinearLayout
        android:id="@+id/layout_author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        style="@style/padding_left_15dip_top_10dip"
        android:orientation="horizontal">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/img_load_empty"
            app:siv_border_color="@color/white"
            app:siv_border_width="2dip"
            app:siv_pressed_color="@color/white"
            app:siv_shape_type="circle"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/MarginSize_15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:singleLine="true"
                tools:text="My name" />

            <TextView
                android:id="@+id/tv_author_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/Color_aaaaaa"
                android:textSize="12sp"
                android:singleLine="true"
                tools:text="发现艺术背后的故事" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_bg_white_stoke_ddd_radius_5dip"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:text="@string/video_attention"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <View style="@style/Line_Horizontal_06dip.color_DDDDDD"/>


</LinearLayout>