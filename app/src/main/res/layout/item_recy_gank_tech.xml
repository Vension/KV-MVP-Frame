<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button_white_press"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/padding_left_15dip_top_10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.sunfusheng.glideimageview.GlideImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_tab_home"
            app:siv_border_size="2dip"
            app:siv_border_color="@color/app_main_thme_color"
            app:siv_pressed_color="@color/placeholder_color"
            app:siv_shape_type="circle"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="作者："
            android:textSize="@dimen/TextSize_14"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/PaddingSize_15"
        android:paddingRight="15dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="80dip"
            android:layout_height="100dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_load_empty"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:lineSpacingExtra="3dip"
            android:text="内容"
            android:textSize="@dimen/TextSize_14"
            android:textColor="@color/app_main_text_color"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/padding_left_15dip_top_10dip">
        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="来源：Vension"
            android:textSize="@dimen/TextSize_12"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-01-23"
            android:textSize="@dimen/TextSize_12"
            android:textColor="@color/Color_999999"/>
    </RelativeLayout>

    <View style="@style/Line_Horizontal_06dip.color_DDDDDD"/>

</LinearLayout>
