<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/mCommonTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:statusBarColor="@color/app_main_thme_color"
        titlebar:titleBarColor="@color/app_main_thme_color"
        titlebar:centerType="textView"
        titlebar:centerText="今日头条"
        titlebar:centerTextColor="@color/white"
        titlebar:centerSearchBg="@drawable/shape_rect_bg_white_radius_5dip"
        titlebar:leftType="none"
        titlebar:rightType="imageButton"
        titlebar:rightImageResource="@drawable/ic_search_white_24dp"
        titlebar:showBottomLine="false"
        />
</FrameLayout>